-- ‡∏î‡∏∂‡∏á‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏• Player
local player = game:GetService("Players").LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")
local data = playerGui:WaitForChild("Data")
local coinsObj = data:WaitForChild("Coins")

-- üñ§ ‡∏™‡∏£‡πâ‡∏≤‡∏á GUI ‡∏•‡∏î CPU ‡πÅ‡∏•‡∏∞‡πÅ‡∏™‡∏î‡∏á‡∏¢‡∏≠‡∏î‡πÄ‡∏´‡πá‡∏î üñ§ --
local screenGui = Instance.new("ScreenGui")
screenGui.ResetOnSpawn = false -- ‡∏õ‡πâ‡∏≠‡∏á‡∏Å‡∏±‡∏ô‡∏´‡∏≤‡∏¢‡πÄ‡∏°‡∏∑‡πà‡∏≠‡∏£‡∏µ‡πÄ‡∏ã‡πá‡∏ï‡∏ï‡∏±‡∏ß‡∏•‡∏∞‡∏Ñ‡∏£
screenGui.IgnoreGuiInset = true -- ‚úÖ ‡∏Ñ‡∏•‡∏∏‡∏°‡πÄ‡∏ï‡πá‡∏° 100% ‡∏Ç‡∏≠‡∏á‡∏´‡∏ô‡πâ‡∏≤‡∏à‡∏≠
screenGui.Parent = playerGui

-- ‡∏™‡∏£‡πâ‡∏≤‡∏á‡∏û‡∏∑‡πâ‡∏ô‡∏´‡∏•‡∏±‡∏á‡∏™‡∏µ‡∏î‡∏≥ **(‡∏Ñ‡∏•‡∏∏‡∏°‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏ô‡πâ‡∏≤‡∏à‡∏≠‡∏à‡∏£‡∏¥‡∏á‡πÜ)**
local blackFrame = Instance.new("Frame")
blackFrame.Size = UDim2.new(1, 0, 1, 0) -- ‚úÖ ‡∏Ñ‡∏•‡∏∏‡∏°‡πÄ‡∏ï‡πá‡∏° 100%
blackFrame.Position = UDim2.new(0, 0, 0, 0) -- ‚úÖ ‡∏≠‡∏¢‡∏π‡πà‡∏°‡∏∏‡∏°‡∏ö‡∏ô‡∏™‡∏∏‡∏î
blackFrame.BackgroundColor3 = Color3.new(0, 0, 0) -- ‡∏™‡∏µ‡∏î‡∏≥
blackFrame.ZIndex = 10 -- **‡πÉ‡∏´‡πâ‡∏≠‡∏¢‡∏π‡πà‡∏î‡πâ‡∏≤‡∏ô‡∏´‡∏ô‡πâ‡∏≤**
blackFrame.Parent = screenGui

-- ‡∏™‡∏£‡πâ‡∏≤‡∏á TextLabel ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡πÅ‡∏™‡∏î‡∏á‡∏¢‡∏≠‡∏î‡πÄ‡∏´‡πá‡∏î (‡πÉ‡∏´‡∏ç‡πà + ‡∏ï‡∏£‡∏á‡∏Å‡∏•‡∏≤‡∏á)
local shoomsLabel = Instance.new("TextLabel")
shoomsLabel.Size = UDim2.new(0.8, 0, 0.2, 0) 
shoomsLabel.Position = UDim2.new(0.1, 0, 0.4, 0) -- **‡πÉ‡∏´‡πâ‡∏≠‡∏¢‡∏π‡πà‡∏Å‡∏•‡∏≤‡∏á‡∏à‡∏≠**
shoomsLabel.BackgroundTransparency = 1
shoomsLabel.TextColor3 = Color3.new(1, 1, 1) -- ‡∏™‡∏µ‡∏Ç‡∏≤‡∏ß
shoomsLabel.Font = Enum.Font.SourceSansBold
shoomsLabel.TextScaled = true
shoomsLabel.Text = "üçÑ Shooms: 0" -- ‡∏Ñ‡πà‡∏≤‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ï‡πâ‡∏ô
shoomsLabel.ZIndex = 11
shoomsLabel.Parent = screenGui

-- ‡∏™‡∏£‡πâ‡∏≤‡∏á TextLabel ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡πÅ‡∏™‡∏î‡∏á‡πÄ‡∏ß‡∏•‡∏≤‡∏ó‡∏µ‡πà‡∏≠‡∏≠‡∏ô‡πÑ‡∏•‡∏ô‡πå
local timeLabel = Instance.new("TextLabel")
timeLabel.Size = UDim2.new(0.8, 0, 0.1, 0)
timeLabel.Position = UDim2.new(0.1, 0, 0.55, 0) -- **‡∏≠‡∏¢‡∏π‡πà‡πÉ‡∏ï‡πâ‡∏¢‡∏≠‡∏î‡πÄ‡∏´‡πá‡∏î**
timeLabel.BackgroundTransparency = 1
timeLabel.TextColor3 = Color3.new(1, 1, 1) -- ‡∏™‡∏µ‡∏Ç‡∏≤‡∏ß
timeLabel.Font = Enum.Font.SourceSansBold
timeLabel.TextScaled = true
timeLabel.Text = "‚è≥ Online: 00:00:00" -- ‡∏Ñ‡πà‡∏≤‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ï‡πâ‡∏ô
timeLabel.ZIndex = 11
timeLabel.Parent = screenGui

-- ‡∏ï‡∏±‡∏ß‡πÅ‡∏õ‡∏£‡∏ï‡∏¥‡∏î‡∏ï‡∏≤‡∏°‡πÄ‡∏ß‡∏•‡∏≤‡∏ó‡∏µ‡πà‡∏≠‡∏≠‡∏ô‡πÑ‡∏•‡∏ô‡πå ‡πÅ‡∏•‡∏∞‡∏à‡∏≥‡∏ô‡∏ß‡∏ô‡πÄ‡∏´‡πá‡∏î‡∏ó‡∏µ‡πà‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏Ç‡∏∂‡πâ‡∏ô
local startTime = tick() -- ‡πÄ‡∏Å‡πá‡∏ö‡πÄ‡∏ß‡∏•‡∏≤‡∏ó‡∏µ‡πà‡πÄ‡∏Ç‡πâ‡∏≤‡πÄ‡∏Å‡∏°
local initialShooms = coinsObj and coinsObj.Value or 0 -- ‡∏Ñ‡πà‡∏≤‡∏à‡∏≥‡∏ô‡∏ß‡∏ô‡πÄ‡∏´‡πá‡∏î‡∏ï‡∏≠‡∏ô‡πÄ‡∏£‡∏¥‡πà‡∏°
local lastShooms = initialShooms -- ‡πÄ‡∏Å‡πá‡∏ö‡∏Ñ‡πà‡∏≤‡∏à‡∏≥‡∏ô‡∏ß‡∏ô‡πÄ‡∏´‡πá‡∏î‡∏•‡πà‡∏≤‡∏™‡∏∏‡∏î

-- ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï Shooms ‡πÅ‡∏•‡∏∞‡πÄ‡∏ß‡∏•‡∏≤‡∏ó‡∏µ‡πà‡∏≠‡∏≠‡∏ô‡πÑ‡∏•‡∏ô‡πå
local function updateShoomsAndTime()
    -- ‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï‡πÄ‡∏ß‡∏•‡∏≤‡∏ó‡∏µ‡πà‡∏≠‡∏≠‡∏ô‡πÑ‡∏•‡∏ô‡πå
    local elapsedTime = tick() - startTime
    local hours = math.floor(elapsedTime / 3600)
    local minutes = math.floor((elapsedTime % 3600) / 60)
    local seconds = math.floor(elapsedTime % 60)
    timeLabel.Text = string.format("‚è≥ Online: %02d:%02d:%02d", hours, minutes, seconds)

    -- ‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï‡∏¢‡∏≠‡∏î Shooms
    local currentShooms = coinsObj and coinsObj.Value or 0
    local shoomsDifference = currentShooms - initialShooms -- ‡∏Ñ‡∏≥‡∏ô‡∏ß‡∏ì‡∏à‡∏≥‡∏ô‡∏ß‡∏ô‡∏ó‡∏µ‡πà‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏Ç‡∏∂‡πâ‡∏ô

    if shoomsDifference > 0 then
        shoomsLabel.Text = string.format("üçÑ Shooms: %d (+%d)", currentShooms, shoomsDifference)
    else
        shoomsLabel.Text = string.format("üçÑ Shooms: %d", currentShooms)
    end
end

-- ‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï‡∏Ñ‡πà‡∏≤‡∏ó‡∏∏‡∏Å 0.5 ‡∏ß‡∏¥‡∏ô‡∏≤‡∏ó‡∏µ‡πÉ‡∏´‡πâ GUI ‡πÅ‡∏™‡∏î‡∏á‡∏Ñ‡πà‡∏≤ Shooms ‡πÅ‡∏•‡∏∞‡πÄ‡∏ß‡∏•‡∏≤‡∏ó‡∏µ‡πà‡∏≠‡∏≠‡∏ô‡πÑ‡∏•‡∏ô‡πå‡πÅ‡∏ö‡∏ö‡πÄ‡∏£‡∏µ‡∏¢‡∏•‡πÑ‡∏ó‡∏°‡πå
game:GetService("RunService").Heartbeat:Connect(function()
    wait(0.5) -- ‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï‡∏ó‡∏∏‡∏Å 0.5 ‡∏ß‡∏¥‡∏ô‡∏≤‡∏ó‡∏µ ‡∏•‡∏î‡∏Å‡∏≤‡∏£‡πÇ‡∏´‡∏•‡∏î CPU
    updateShoomsAndTime()
end)
